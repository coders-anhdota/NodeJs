extends ./../layouts/layout.pug

block content
	
	h1 
		span List-User
		a.ml-3(href="/users/create", class="btn.btn-primary") Create

	form(action="/users/search", method="GET", class="form-group d-flex")
		input(type="text", name="q", class="form-control") 
		button(class="btn btn-primary") Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions

		each user in users
			tr
				td
					img(src= user.avatar, width =32)
				td= user.name
				td= user.phone
				td
					a.btn.btn-light(href="/users/" + user.id) View