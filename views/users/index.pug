extends ./../layouts/layout.pug

block content

	h1 List-User

	a(href="/users/create") Create

	form(action="/users/search", method="GET", class="form-group d-flex")
		input(type="text", name="q", class="form-control") 
		button(class="btn btn-primary") Search
	ul
		each user in users
			li
				span= user.name + " "
				a(href="/users/" + user.id) View